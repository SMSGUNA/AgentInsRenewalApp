<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
            android:text="CLIENT_NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="53dp" android:layout_alignParentTop="true" android:id="@+id/tvClientName"
            android:layout_marginTop="48dp" android:textSize="18sp"/>
    <TextView
            android:text="POLICY_NUMBER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:id="@+id/etPolicyNumber"
            android:layout_marginTop="93dp" android:layout_alignStart="@+id/tvClientName" android:textSize="18sp"/>
    <TextView
            android:text="RENEWAL_DATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:id="@+id/etRenewalDate"
            android:layout_marginTop="133dp" android:layout_alignStart="@+id/tvClientName" android:textSize="18sp"
            android:layout_marginStart="0dp"/>
    <TextView
            android:text="VEHICLE_NUMBER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:id="@+id/etVehicleNumber"
            android:layout_marginTop="172dp" android:layout_alignStart="@+id/tvClientName" android:textSize="18sp"/>
</RelativeLayout>