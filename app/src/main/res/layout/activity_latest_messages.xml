<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LatestMessagesActivity">

    <EditText
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etPolicySearch" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.495"
            android:hint="POLICY NUMBER"/>
    <Button
            android:text="SEARCH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buSearchPolicyNo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etPolicySearch"
            app:layout_constraintStart_toStartOf="@+id/etPolicySearch"
            app:layout_constraintEnd_toEndOf="@+id/etPolicySearch"/>
</android.support.constraint.ConstraintLayout>